{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "transparent",
  "padding": 5,
  "width": 200,
  "height": 200,
  "title": {
    "text": "Proportion of Natural Disaster Types in Australia", 
    "color": "black",
    "fontSize": 22
  },
  "data": {
    "url": "https://raw.githubusercontent.com/jxcksonli/FIT3179/refs/heads/main/data/furthercleannd.csv",
    "format": {"type": "csv"}
  },
  "transform": [
    {
      "aggregate": [
        {"op": "count", "as": "count"}
      ],
      "groupby": ["disasterType"]
    },
    {
      "joinaggregate": [
        {"op": "sum", "field": "count", "as": "total"}
      ]
    },
    {
      "calculate": "datum.count / datum.total * 100",
      "as": "percentage"
    },
    {
      "calculate": "format(datum.percentage, '.1f') + '%'",
      "as": "formatted_percentage"
    }
    
  ],
  "mark": {"type": "arc", "innerRadius": 50},
  "encoding": {
    "theta": {"field": "count", "type": "quantitative"},
    "color": {
      "field": "disasterType",
      "type": "nominal",
      "scale": {
        "domain": [
          "Fire Incidents ",
          "Environmental",
          "Epidemic ",
          "Extreme Weather",
          "Other ",
          "Shipwreck ",
          "Transport "
        ],
        "range": [
          "#B22222",
          "#228B22",
          "#FFD700",
          "#800080",
          "#FFA500",
          "#4682B4",
          "#FFC0CB"
        ]
      },
      "title": "Disaster Type"
    },
    "tooltip": [
      {"field": "disasterType", "type": "nominal", "title": "Disaster Type"},
      {"field": "count", "type": "quantitative", "title": "Count"},
      {"field": "formatted_percentage", "type": "nominal", "title": "Percentage"}
    ]
  }
}