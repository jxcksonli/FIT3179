{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "#9eb0a6",
  "padding": 5,
  "width": 800,
  "height": 450,
  "title": {
    "text": "Natural Disasters: Death Toll in Australia","color": "black",
    "fontSize": 30},
  "data": [
    {
      "name": "ausmap",
      "url": "https://raw.githubusercontent.com/jxcksonli/FIT3179/refs/heads/main/js/ausmap.topojson",
      "format": {
        "type": "topojson",
        "feature": "ne_50m_admin_1_states_provinces"
      }
    },
    {
      "name": "disasters",
      "url": "https://raw.githubusercontent.com/jxcksonli/FIT3179/refs/heads/main/data/furthercleannd.csv",
      "format": { "type": "csv" },
      "transform": [
        {
          "type": "geopoint",
          "projection": "projection",
          "fields": ["lon", "lat"],
          "as": ["longitude", "latitude"]
        }
      ]
    }
  ],
  "projections": [
    {
      "name": "projection",
      "type": "equirectangular",
      "center": [133.0664063, -27.2643146],
      "scale": 600,
      "clipExtent": [[0, 0], [800, 700]]
    }
  ],
  "marks": [
    {
      "type": "shape",
      "from": { "data": "ausmap" },
      "transform": [{ "type": "geoshape", "projection": "projection" }],
      "encode": {
        "update": {
          "fill": { "value": "lightgray" },
          "stroke": { "value": "darkgrey" }
        }
      }
    },
    {
      "type": "symbol",
      "from": { "data": "disasters" },
      "clip": true,
      "encode": {
        "update": {
          "x": { "field": "longitude" },
          "y": { "field": "latitude" },
          "size": { "scale": "size", "field": "Deaths" },
          "fill": { "scale": "color", "field": "disasterType" },
          "tooltip": {
            "signal": "{'Disaster Type': datum.disasterType, 'Deaths': datum.Deaths}"
          }
        }
      }
    }
  ],
  "scales": [
    {
      "name": "color",
      "type": "ordinal",
      "domain": [
        "Fire Incidents ","Environmental","Epidemic ","Extreme Weather","Other ","Shipwreck ","Transport "],
      "range": ["#B22222","#228B22","#FFD700","#800080","#FFA500","#4682B4","#FFC0CB"]
    },
    {
      "name": "size",
      "type": "linear",
      "domain": { "data": "disasters", "field": "Deaths" },
      "range": [20, 1000],
      "zero": true
    }
  ],
  "legends": [
    {
      "title": "Disaster Type","fill": "color","symbolType": "circle"
    },
    {
      "title": "Deaths","size": "size","symbolType": "circle"
    }
  ]
}