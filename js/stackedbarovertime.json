{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "transparent",
  "title": {
    "text": "Natural Disasters in Australia Over Time (1890-2020)",
    "color": "black",
    "fontSize": 24
  },
  "data": {
    "url": "https://raw.githubusercontent.com/jxcksonli/FIT3179/refs/heads/main/data/furthercleannd.csv"
  },
  "transform": [
    {"filter": "year(datum.cleansdate) >= 1890 && year(datum.cleansdate) <= 2020"},
    {"timeUnit": "year", "field": "cleansdate", "as": "year_cleansdate"},
    {"calculate": "year(datum.cleansdate)", "as": "year_only"},
    {"aggregate": [{"op": "count", "as": "total_count"}], "groupby": ["year_cleansdate", "year_only", "disasterType"]}
  ],
  "vconcat": [
    {
      "width": 1000,
      "height": 300,
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "year_cleansdate",
          "type": "temporal",
          "scale": {"domain": {"param": "brush"}},
          "title": "Year"
        },
        "y": {
          "aggregate": "sum",
          "field": "total_count",
          "type": "quantitative",
          "title": "Number of Disasters"
        },
        "color": {
          "field": "disasterType",
          "type": "nominal",
          "title": "Disaster Type",
          "scale": {
            "domain": [
              "Fire Incidents ",
              "Environmental",
              "Epidemic ",
              "Extreme Weather",
              "Other ",
              "Shipwreck ",
              "Transport "
            ],
            "range": [
              "#B22222",
              "#228B22",
              "#FFD700",
              "#800080",
              "#FFA500",
              "#4682B4",
              "#FFC0CB"
            ]
          }
        },
        "tooltip": [
          {"field": "year_only", "title": "Year"},
          {"field": "disasterType", "title": "Disaster Type"},
          {"field": "total_count", "title": "Disaster Count"}
        ]
      }
    },
    {
      "width": 1000,
      "height": 60,
      "mark": "area",
      "params": [{
        "name": "brush",
        "select": {"type": "interval", "encodings": ["x"]}
      }],
      "encoding": {
        "x": {
          "field": "year_cleansdate",
          "type": "temporal",
          "title": "Year"
        },
        "y": {
          "aggregate": "sum",
          "field": "total_count",
          "type": "quantitative",
          "title": "Count of Records",
          "axis": {"tickCount": 3,  "grid": false}
        },
        "tooltip": [
          {"field": "year_only", "title": "Year"},
          {"field": "disasterType", "title": "Disaster Type"},
          {"field": "total_count", "title": "Disaster Count"}
        ]
      }
    }
  ]
}