{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "white",
  "padding": 5,
  "width": 800,
  "height": 400,
  "title": {
    "text": "Stacked Bar Chart of Disasters Over Time with Total Line (1900-2020)",
    "frame": "group"
  },
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "https://raw.githubusercontent.com/jxcksonli/FIT3179/refs/heads/main/data/naturaldisasterscleaned.csv",
      "format": {
        "type": "csv",
        "parse": {"cleansdate": "date"},
        "delimiter": ","
      },
      "transform": [
        {
          "type": "filter",
          "expr": "year(datum.cleansdate) >= 1890 && year(datum.cleansdate) <= 2020"
        },
        {
          "field": "cleansdate",
          "type": "timeunit",
          "units": ["year"],
          "as": ["year_cleansdate", "year_cleansdate_end"]
        }
      ]
    },
    {
      "name": "data_0",
      "source": "source_0",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["year_cleansdate"],
          "ops": ["count"],
          "fields": [null],
          "as": ["__count"]
        }
      ]
    },
    {
      "name": "data_1",
      "source": "source_0",
      "transform": [
        {
          "type": "aggregate",
          "groupby": ["year_cleansdate", "year_cleansdate_end", "disasterType"],
          "ops": ["count"],
          "fields": [null],
          "as": ["__count"]
        },
        {
          "type": "stack",
          "groupby": ["year_cleansdate"],
          "field": "__count",
          "sort": {"field": ["disasterType"], "order": ["descending"]},
          "as": ["__count_start", "__count_end"],
          "offset": "zero"
        },
        {
          "type": "filter",
          "expr": "(isDate(datum[\"year_cleansdate\"]) || (isValid(datum[\"year_cleansdate\"]) && isFinite(+datum[\"year_cleansdate\"])))"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "rect",
      "style": ["bar"],
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "fill": {"scale": "color", "field": "disasterType"},
          "tooltip": {
            "signal": "{\"Year\": timeFormat(datum[\"year_cleansdate\"], timeUnitSpecifier([\"year\"], {\"year-month\":\"%b %Y \",\"year-month-date\":\"%b %d, %Y \"})), \"Disaster Type\": isValid(datum[\"disasterType\"]) ? datum[\"disasterType\"] : \"\"+datum[\"disasterType\"], \"Disaster Count\": format(datum[\"__count\"], \"\")}"
          },
          "ariaRoleDescription": {"value": "bar"},
          "description": {
            "signal": "\"Year: \" + (timeFormat(datum[\"year_cleansdate\"], '%Y')) + \"; Number of Disasters: \" + (format(datum[\"__count\"], \"\")) + \"; Disaster Type: \" + (isValid(datum[\"disasterType\"]) ? datum[\"disasterType\"] : \"\"+datum[\"disasterType\"]) + \"; Disaster Count: \" + (format(datum[\"__count\"], \"\"))"
          },
          "x2": {
            "scale": "x",
            "field": "year_cleansdate",
            "offset": {
              "signal": "0.5 + (abs(scale(\"x\", datum[\"year_cleansdate_end\"]) - scale(\"x\", datum[\"year_cleansdate\"])) < 0.25 ? -0.5 * (0.25 - (abs(scale(\"x\", datum[\"year_cleansdate_end\"]) - scale(\"x\", datum[\"year_cleansdate\"])))) : 0.5)"
            }
          },
          "x": {
            "scale": "x",
            "field": "year_cleansdate_end",
            "offset": {
              "signal": "0.5 + (abs(scale(\"x\", datum[\"year_cleansdate_end\"]) - scale(\"x\", datum[\"year_cleansdate\"])) < 0.25 ? 0.5 * (0.25 - (abs(scale(\"x\", datum[\"year_cleansdate_end\"]) - scale(\"x\", datum[\"year_cleansdate\"])))) : -0.5)"
            }
          },
          "y": {"scale": "y", "field": "__count_end"},
          "y2": {"scale": "y", "field": "__count_start"}
        }
      }
    },
    {
      "name": "layer_1_marks",
      "type": "line",
      "style": ["line"],
      "sort": {"field": "x"},
      "from": {"data": "data_0"},
      "encode": {
        "update": {
          "stroke": {"value": "black"},
          "tooltip": {
            "signal": "{\"Year\": timeFormat(datum[\"year_cleansdate\"], timeUnitSpecifier([\"year\"], {\"year-month\":\"%b %Y \",\"year-month-date\":\"%b %d, %Y \"})), \"Total Disasters\": format(datum[\"__count\"], \"\")}"
          },
          "description": {
            "signal": "\"cleansdate (year): \" + (timeFormat(datum[\"year_cleansdate\"], timeUnitSpecifier([\"year\"], {\"year-month\":\"%b %Y \",\"year-month-date\":\"%b %d, %Y \"}))) + \"; Count of Records: \" + (format(datum[\"__count\"], \"\")) + \"; Year: \" + (timeFormat(datum[\"year_cleansdate\"], timeUnitSpecifier([\"year\"], {\"year-month\":\"%b %Y \",\"year-month-date\":\"%b %d, %Y \"}))) + \"; Total Disasters: \" + (format(datum[\"__count\"], \"\"))"
          },
          "x": {"scale": "x", "field": "year_cleansdate"},
          "y": {"scale": "y", "field": "__count"},
          "defined": {
            "signal": "isValid(datum[\"year_cleansdate\"]) && isFinite(+datum[\"year_cleansdate\"])"
          }
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "time",
      "domain": {
        "fields": [
          {"data": "data_1", "field": "year_cleansdate"},
          {"data": "data_1", "field": "year_cleansdate_end"},
          {"data": "data_0", "field": "year_cleansdate"}
        ]
      },
      "range": [0, {"signal": "width"}]
    },
    {
      "name": "y",
      "type": "linear",
      "domain": [0, 30],
      "range": [{"signal": "height"}, 0],
      "nice": true,
      "zero": true
    },
    {
      "name": "color",
      "type": "ordinal",
      "domain": {"data": "data_1", "field": "disasterType", "sort": true},
      "range": "category"
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "gridScale": "y",
      "grid": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "tickMinStep": {
        "signal": "datetime(2002, 0, 1, 0, 0, 0, 0) - datetime(2001, 0, 1, 0, 0, 0, 0)"
      },
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "gridScale": "x",
      "grid": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "domain": false,
      "labels": false,
      "aria": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Year",
      "format": "%Y",
      "labelFlush": true,
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(width/40)"},
      "tickMinStep": {
        "signal": "datetime(2002, 0, 1, 0, 0, 0, 0) - datetime(2001, 0, 1, 0, 0, 0, 0)"
      },
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Number of Disasters",
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "zindex": 0
    }
  ],
  "legends": [
    {"title": "Disaster Type", "fill": "color", "symbolType": "square"}
  ],
  "config": {}
}